@prefix rdfc: <https://w3id.org/rdf-connect#>.
@prefix xsd: <http://www.w3.org/2001/XMLSchema#>.
@prefix ex: <http://example.org/>.
@prefix sh: <http://www.w3.org/ns/shacl#>.

# The shape
[ ] a sh:NodeShape;
  sh:targetClass ex:FooBar;
  sh:property [
    sh:name "words";
    sh:path ex:word;
    sh:minCount 1;
    sh:datatype xsd:string;
  ], [
    sh:name "writer";
    sh:path ex:writer;
    sh:minCount 1;
    sh:maxCount 1;
    sh:class rdfc:Writer;
  ].

# The data 
ex:proc a ex:FooBar;
  ex:word "Hello", "World", "!";
  ex:writer <someChannel>.

